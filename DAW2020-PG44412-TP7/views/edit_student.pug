extends layout

block content
    .w3-card-4
      header.w3-container.w3-blue-grey
        h3.w3-left(style="font-weight:bold;font-family:Verdana") Edit Student #{student.numero} 
      form.w3-container.w3-padding(action='/students/edit?_method=PUT' method="POST")
        label <b>Name</b>
        input.w3-input.w3-border.w3-light-grey(style="height:38px;margin-bottom:5px" type="text" name="nome" value=student.nome)
        
        label <b>Number</b>
        input.w3-input.w3-border.w3-light-grey(style="height:38px;margin-bottom:5px" type="text" name="numero" placeholder="A# or PG#" value=student.numero)
        
        label <b>Github</b>
        input.w3-input.w3-border.w3-light-grey(style="height:38px;margin-bottom:5px" type="text" name="git" value=student.git)
        
        label <b>TPC  </b>
        input#tpc(type='checkbox' name='tp1' checked=(student.tpc[0] ? true : false)) 
        span TP1 

        input#tpc(type='checkbox' name='tp2' checked=(student.tpc[1] ? true : false)) 
        span TP2 

        input#tpc(type='checkbox' name='tp3' checked=(student.tpc[2] ? true : false)) 
        span TP3 

        input#tpc(type='checkbox' name='tp4' checked=(student.tpc[3] ? true : false))
        span TP4 

        input#tpc(type='checkbox' name='tp5' checked=(student.tpc[4] ? true : false)) 
        span TP5 

        input#tpc(type='checkbox' name='tp6' checked=(student.tpc[5] ? true : false)) 
        span TP6 

        input#tpc(type='checkbox' name='tp7' checked=(student.tpc[6] ? true : false)) 
        span TP7 

        input#tpc(type='checkbox' name='tp8' checked=(student.tpc[7] ? true : false)) 
        span TP8 
        p
        input.w3-button.w3-blue-grey.w3-round(style="margin-right:10px" type="submit" value="Edit")
        input.w3-button.w3-blue-grey.w3-round(type="reset" value="Reset")
      .w3-container.w3-center
        p
          a.w3-button.w3-blue-gray.w3-round(href="/students") Back
      footer.w3-container.w3-padding.w3-blue-grey
        address.w3-center Generated by TP7 :: November 2020, PG44412
