extends layout

block content
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    .w3-card-4
      header.w3-container.w3-blue-grey
        h3.w3-left(style="font-weight:bold;font-family:Verdana") Students List (DAW2020)
      .w3-container.w3-center(style="padding:10px")
          a.w3-button.w3-blue-gray.w3-round.w3-hover-green(href='/add' style="margin-right:10px") <b>+</b> student
          a.w3-button.w3-blue-gray.w3-round.w3-hover-black(href='/students') 
            span.material-icons(style="font-size:17px") replay
      if list.length > 0
        .w3-container
          table.w3-table-all.w3-hoverable
            thead
              tr
                th
                th Number
                th Name
                th Git
            each s in list
              tr
                td(style="width:18%")
                  a.w3-button.w3-blue-grey.w3-round.w3-hover-black(style="float:left;margin-right:10px;height:35px" href='/students/' + s.numero)
                    span.material-icons(style="font-size:18px") find_in_page
                  a.w3-button.w3-blue-grey.w3-round.w3-hover-black(style="float:left;margin-right:10px;height:35px" href='/students/edit/' + s.numero)
                    span.material-icons(style="font-size:18px") edit

                  form(action='/students/delete/' + s.numero + '?_method=DELETE' method='POST' onclick="return confirm('Are you sure you want to delete this item?');")  
                    button.w3-button.w3-blue-grey.w3-round.w3-hover-red(style="height:35px" type='submit' value='Submit') 
                      span.material-icons(style="font-size:18px") delete
                td #{s.numero}
                td #{s.nome}
                td #{s.git}
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-padding.w3-blue-grey
        address.w3-center Generated by TP7 :: November 2020, PG44412

