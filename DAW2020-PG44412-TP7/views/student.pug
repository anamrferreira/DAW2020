extends layout

block content
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    .w3-card-4
      header.w3-container.w3-blue-grey
        h3.w3-left(style="font-weight:bold;font-family:Verdana") Student #{student.numero}
      .w3-container
        .w3-container.w3-border-left.w3-border-right
            img(src="https://picsum.photos/100/100" style="float:left;padding-right:30px;padding-top:15px;padding-bottom:15px")
            p <b>Name: </b>#{student.nome}
            p <b>Number: </b>#{student.numero}
            p <b>Github: </b>
               a(href="#{student.git}") #{student.git}
        table.w3-table-all
          tr 
            th TPC
            th Status
          each tpc, i in student.tpc
            tr
              td= i+1
              if tpc == 1
                td
                  span.material-icons(style="color:green") check
              else if tpc == 0
                td 
                  span.material-icons(style="color:red") clear
      .w3-container.w3-center
        p
          a.w3-button.w3-blue-gray.w3-round(href="/students") Back
      footer.w3-container.w3-padding.w3-blue-grey
